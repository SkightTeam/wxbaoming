page {
    background-color: #fff;
    width: 100%;
}

.header, .footer {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.footer text {
    font-size: 35rpx;
}

.container {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 8rpx 0;
    box-sizing: border-box;
}

.section {
    padding: 22rpx 0;
    width: 100%;
}

button {
    width: 90%;
    margin: 15rpx auto;
    padding-top: 0;
    padding-bottom: 0;
}

text, input, textarea {
    padding: 0 32rpx;
    vertical-align: baseline;
    line-height: 46rpx;
}

.caption {
    color: gray;
    font-size: small;
    padding: 5rpx 0;
}

.label {
    background-color: #F6F6F6;
}

.flex-row {
    display: flex;
    flex-direction: row;
}

.flex-col {
    display: flex;
    flex-direction: column;
}

.errorMessage {
    color: red;
}

.avatarContainer {
    padding: 0 32rpx;
    display: flex;
}

.avatar {
    width: 90rpx;
    height: 90rpx;
}

.avatarContainer text {
    color: gray;
}

.label {
    border-top: 1rpx solid #d6d6d6;
}

.pad_top {
    padding-top: 6rpx;
}

.hr {
    border-top: 2rpx solid #F6F6F6;
}

.loading {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 300rpx;
}

.loading image {
    width: 214rpx;
    height: 120rpx;
}
